<table class="table">
  <thead>
   <th>ID</th>
   <th>Branch</th>
   <th>Description</th>
   <th></th>
   <th>Path to Logs</th>
  </thead>
  <tbody>
  <tr>
   <td><%= @driver_drop.id %></td>
   <td><%= @driver_drop.branch %></td>
   <td><%= @driver_drop.description %></td>
   <td>
    <div class="btn-group">
     <button class="btn btn-danger">Work On Drop Here</button>
     <button class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
     <span class="caret"></span>
     </button>
       <ul class="dropdown-menu">
       <li>
        <a href="#" <%= new_package_path %> >Package Diver Drop</a>
       </li>
       <li>
        <a href="#" <%= driver_drop_path(@driver_drop, :action => 'send_mail') %> >Create Drop Mail</a>
       </li>
       <li>
        <a href= <%= new_driver_drop_log_path(@driver_drop)%> >Upload Test Logs</a>
       </li>
       <li>
       <li class="divider"></li>
       <li>
        <li>
        <a href= <%= edit_driver_drop_path(@driver_drop) %> >Edit Drop Details</a>
       </li>
       </ul>
    </div>
   </td>
   <td>
    <%= form_for @driver_drop do |f| %>
    32bit: <%= f.text_field :logpath %> <br>
    64bit: <%= f.text_field :x64logpath %> <br>
     <input class="btn btn-primary" type="submit" value="Git'er done">
    <%end%>
   </td>
   </tr>
 </tbody>
</table>
<br>
<br>
<br>
<br>
<br>
<h3> Test Failures </h3>
<table class="table">
<thead>
  <th>OS Platform</th>
  <th>Test name</th>
  <th>Command Line</th>
  <th>Bug Number</th>
  <th></th>
</thead>
<tbody>
  <tr>
   <%@log.each_key do |k| %> 
     <% @log[k].each do|l|  %>
         <tr><td><%= l.platform %></td><td><%= l.name %></td><td><%= l.cmdline %></td>
         <td><%= l.bugnum %></td><td><%= link_to "Bug It!" , edit_driver_drop_log_path(@driver_drop, l.id) %></td></tr>
      <% end %>
    <% end %>
  </tr>
</tbody>
</table>

